<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_white" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/width_2_80"
        app:layout_heightPercent="6.3726%w"
        app:layout_widthPercent="26.8%w"
        android:background="@drawable/greentab" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="10%"
            app:layout_textSizePercent="50%"
            android:text="我喜欢的菜系"
            android:textColor="@color/white" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ImageView
        android:id="@+id/back_bg"
        android:layout_width="@dimen/width_60_80"
        android:layout_height="wrap_content"
        android:src="@drawable/tab_tip"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</com.zhy.android.percent.support.PercentLinearLayout>