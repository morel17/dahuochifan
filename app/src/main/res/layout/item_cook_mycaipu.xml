<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerview"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/width_5_80" >

        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="随便档"
            android:textColor="@color/cooklistinfo_textcolor"
            android:textSize="@dimen/text_size_8" />

        <ImageView
            android:id="@+id/eat_flag"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_5_80"
            android:layout_toRightOf="@+id/level_tv"
            android:background="@drawable/eat"
            android:gravity="center" />

        <TextView
            android:id="@+id/eat_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/eat_flag"
            android:gravity="center"
            android:text="1234"
            android:textColor="@color/main_green"
            android:textSize="@dimen/text_size_7" />

        <TextView
            android:id="@+id/comments_tv"
            android:layout_width="@dimen/width_18_80"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/card_main"
            android:gravity="center"
            android:text="12345评论"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_7" />
    </RelativeLayout>

    <View
        android:id="@+id/centerview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/width_5_80"
        android:paddingLeft="@dimen/width_5_80"
        android:paddingRight="@dimen/width_5_80" >

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_7" />

        <TextView
            android:id="@+id/other_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/price_tv"
            android:gravity="center"
            android:text="元/人"
            android:textColor="@color/cooklistinfo_textcolor"
            android:textSize="@dimen/text_size_7" />

        <RatingBar
            android:id="@+id/myratingbar"
            style="@style/roomRatingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1" />
    </RelativeLayout>

</LinearLayout>