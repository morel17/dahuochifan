<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/cardView_story"
    android:layout_marginBottom="@dimen/dh_2"
    android:layout_marginLeft="@dimen/width_1_80"
    android:layout_marginRight="@dimen/width_1_80"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dh_1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/info_center_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/list_bg"
                app:layout_heightPercent="60%w" />

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/convenientBanner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:canLoop="true"
                app:layout_heightPercent="60%w" />

            <TextView
                android:id="@+id/top_center_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/mainbg"
                android:gravity="center"
                android:text="暂无图片"
                android:textColor="@color/cooklistinfo_textcolor2"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/tip_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_18_80"
            android:layout_below="@+id/info_center_rl"
            android:paddingBottom="@dimen/width_1_80">

            <TextView
                android:id="@+id/top_tip_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_3_80"
                android:gravity="center"
                android:text="送餐时段"
                android:textColor="@color/maincolor_new"
                android:textSize="@dimen/text_size_5" />

            <RelativeLayout
                android:id="@+id/mid_tip_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_4_80"
                android:layout_below="@id/top_tip_tv"
                android:layout_marginTop="@dimen/width_1_80">

                <View
                    android:id="@+id/center_iv"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/mid_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/width_2_80"
                    android:layout_toLeftOf="@id/center_iv"
                    android:gravity="right|center_vertical"
                    android:text="午  11:00—14:00"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_4" />

                <TextView
                    android:id="@+id/night_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/width_2_80"
                    android:layout_toRightOf="@id/center_iv"
                    android:gravity="left|center_vertical"
                    android:text="晚  17:00—20:00"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_9_80"
                android:layout_below="@+id/mid_tip_rl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/width_0_80"
                    android:paddingLeft="@dimen/width_3_80"
                    android:paddingRight="@dimen/width_3_80"
                    android:paddingTop="@dimen/width_0_80"
                    android:text="请在有效送餐时间段里，提前三小时或一天下单"
                    android:textColor="@color/black_second_tittle"
                    android:textSize="@dimen/text_size_3" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dh_8"
            android:layout_below="@+id/tip_rl" />
    </RelativeLayout>

</android.support.v7.widget.CardView>