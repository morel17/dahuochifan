<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/cardView_two"
    android:layout_marginLeft="@dimen/width_1_80"
    android:layout_marginRight="@dimen/width_1_80"
    android:layout_marginTop="@dimen/dh_2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dh_1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/width_12_80"
            android:background="@drawable/white_press_selector"
            android:paddingLeft="@dimen/width_2_80"
            android:paddingRight="@dimen/width_2_80">

            <com.dahuochifan.ui.views.CircleImageView
                android:id="@+id/chef_avatar_iv"
                android:layout_width="@dimen/width_8_80"
                android:layout_height="@dimen/width_8_80"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/chef_nickname_tv"
                style="@style/w_w"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/width_1_80"
                android:layout_toRightOf="@+id/chef_avatar_iv"
                android:text="张姐美味"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_7" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mid_rl"
            style="@style/m_w"
            android:layout_below="@id/top_rl"
            android:background="@color/white">

            <TextView
                android:id="@+id/level_tv"
                style="@style/w_w"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="搭伙"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/level_tv"
                android:paddingLeft="8dp"
                android:text="上海"
                android:textColor="@color/maincolor_new"
                android:textSize="@dimen/text_size_7" />

            <RelativeLayout
                android:id="@+id/day_number_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_tv"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/day_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/cooklistinfo_textcolor_new"
                    android:textSize="@dimen/text_size_6" />

                <TextView
                    android:id="@+id/mid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_3_80"
                    android:layout_toRightOf="@id/day_number_tv"
                    android:gravity="center"
                    android:text="午"
                    android:textColor="@color/cooklistinfo_textcolor_new"
                    android:textSize="@dimen/text_size_6" />

                <TextView
                    android:id="@+id/night_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_3_80"
                    android:layout_toRightOf="@id/mid_tv"
                    android:gravity="center"
                    android:text="晚"
                    android:textColor="@color/cooklistinfo_textcolor_new"
                    android:textSize="@dimen/text_size_6" />
            </RelativeLayout>

            <TextView
                android:id="@+id/person_2"
                style="@style/w_w"
                android:layout_alignParentRight="true"
                android:layout_below="@id/level_tv"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="人"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/person_tv"
                style="@style/w_w"
                android:layout_below="@id/level_tv"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/person_2"
                android:paddingLeft="@dimen/width_4_80"
                android:text="0"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/price_2"
                style="@style/w_w"
                android:layout_below="@id/day_number_rl"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/level_tv"
                android:text="￥"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/price_tv"
                style="@style/w_w"
                android:layout_below="@id/level_tv"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/person_tv"
                android:text="0"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <ImageView
                android:id="@+id/lineOne"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/day_number_rl"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_number_rl"
                android:padding="8dp">

                <TextView
                    android:id="@+id/all_price_tv"
                    style="@style/w_w"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥80"
                    android:textColor="@color/maincolor_new"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/status_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/maincolor_new"
                    android:textSize="@dimen/text_size_7" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>