<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_story"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/cardView_cook"
    android:layout_marginBottom="@dimen/dh_2"
    android:layout_marginLeft="@dimen/width_1_80"
    android:layout_marginRight="@dimen/width_1_80"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dh_1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dh_16"
        android:paddingLeft="@dimen/dh_16"
        android:paddingRight="@dimen/dh_16"
        android:paddingTop="@dimen/dh_16">

        <TextView
            android:id="@+id/content_tvme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:lineSpacingExtra="@dimen/dh_6"
            android:maxLines="4"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_6" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/content_tvme"
            android:layout_marginTop="@dimen/dh_8">

            <ImageView
                android:id="@+id/more_iv"
                android:layout_width="@dimen/width_3_80"
                android:layout_height="@dimen/width_3_80"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/triangleicon" />

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dh_8"
                android:layout_toLeftOf="@id/more_iv"
                android:text="更多"
                android:textColor="@color/maincolor_new"
                android:textSize="@dimen/text_size_6" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
