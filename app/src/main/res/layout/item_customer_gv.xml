<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_24_80"
    android:layout_height="@dimen/width_20_80"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/width_1_80"
    android:paddingTop="@dimen/width_1_80" >

    <RelativeLayout
        android:id="@+id/img_rl"
        android:layout_width="@dimen/width_12_80"
        android:layout_height="@dimen/width_12_80"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/gv_img"
            android:layout_width="@dimen/width_10_80"
            android:layout_height="@dimen/width_10_80"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle_order_green"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_4"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_rl"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/width_0_80"
        android:gravity="center"
        android:textColor="@color/maincolor_new"
        android:textSize="@dimen/text_size_3" />

</RelativeLayout>