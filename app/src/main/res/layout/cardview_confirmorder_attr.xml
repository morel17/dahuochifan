<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_attr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cardView_addr"
    android:layout_marginBottom="@dimen/dh_2"
    android:layout_marginLeft="@dimen/width_1_80"
    android:layout_marginRight="@dimen/width_1_80"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dh_1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/address_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/time_pop_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dh_48"
            android:paddingLeft="@dimen/dh_16"
            android:paddingRight="@dimen/dh_16">

            <TextView
                android:id="@+id/time_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用餐时间："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_arrow" />

            <TextView
                android:id="@+id/time_pop_choose_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/time_others"
                android:text="请选择用餐时间"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_6" />
        </RelativeLayout>

        <View
            android:id="@+id/acor_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/time_pop_rl"
            android:layout_marginLeft="@dimen/width_55_80" />

        <RelativeLayout
            android:id="@+id/attr_rl2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dh_48"
            android:layout_below="@+id/time_pop_rl"
            android:paddingLeft="@dimen/dh_16"
            android:paddingRight="@dimen/dh_16">

            <TextView
                android:id="@+id/test_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="口　　味："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/test_others"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_6" />

            <ImageView
                android:id="@+id/tag_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/red_arrow" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_others"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/attr_rl2"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/attr_rl3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dh_48"
            android:layout_below="@+id/line_others"
            android:paddingLeft="@dimen/dh_16"
            android:paddingRight="@dimen/dh_16">

            <TextView
                android:id="@+id/remark_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="备　　注："
                android:textColor="@color/text_gold"
                android:textSize="@dimen/text_size_6" />

            <EditText
                android:id="@+id/remark_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/remark_others"
                android:background="@null"
                android:hint="有忌口请备注"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/text_light"
                android:textColorHint="@color/black_second_tittle"
                android:textSize="@dimen/text_size_6" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
