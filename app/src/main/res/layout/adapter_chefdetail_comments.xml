<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comments_rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/top_rl"
    android:background="@drawable/underline_gray_bottom"
    android:paddingBottom="@dimen/width_3_80"
    android:paddingTop="@dimen/width_3_80">

    <com.dahuochifan.ui.views.CircleImageView
        android:id="@+id/circle_iv1"
        android:layout_width="@dimen/width_8_80"
        android:layout_height="@dimen/width_8_80"
        android:layout_marginLeft="@dimen/dh_8" />

    <TextView
        android:id="@+id/nickname_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/width_0_80"
        android:layout_marginLeft="@dimen/dh_8"
        android:layout_toRightOf="@+id/circle_iv1"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_5" />

    <TextView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/content_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:layout_marginLeft="@dimen/dh_8"
        android:layout_toRightOf="@+id/circle_iv1"
        android:textColor="@color/black_second_tittle"
        android:textSize="@dimen/text_size_5" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/pic_rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/content_tv1"
        android:layout_below="@+id/content_tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dh_8"
        app:layout_heightPercent="17%w">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_pic_cyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
