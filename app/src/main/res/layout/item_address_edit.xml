<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dh_2"
    android:paddingTop="@dimen/dh_2">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardView2"
        android:layout_marginLeft="@dimen/width_1_80"
        android:layout_marginRight="@dimen/width_1_80"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dh_1"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_press_selector"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shike_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dh_16"
                android:layout_marginTop="@dimen/dh_16"
                android:gravity="center"
                android:text="食客："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/shike_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dh_16"
                android:layout_toRightOf="@+id/shike_tv"
                android:gravity="center"
                android:text="杨云"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_marginTop="@dimen/dh_16"
                android:layout_toRightOf="@id/shike_name_tv"
                android:background="@drawable/card_main_new"
                android:paddingBottom="@dimen/width_0_80"
                android:paddingLeft="@dimen/width_1_80"
                android:paddingRight="@dimen/width_1_80"
                android:paddingTop="@dimen/width_0_80"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_5"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/centerline_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/width_2_80"
                    android:background="@drawable/red_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/moren_rl"
                android:layout_width="@dimen/width_15_80"
                android:layout_height="@dimen/width_15_80"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/width_0_80"
                android:layout_marginTop="@dimen/width_0_80"
                android:layout_toLeftOf="@+id/centerline_one"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/moren_iv"
                    android:layout_width="@dimen/width_4_80"
                    android:layout_height="@dimen/width_4_80"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gou_selector2" />
            </RelativeLayout>

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shike_name_tv"
                android:layout_marginLeft="@dimen/dh_16"
                android:layout_marginTop="@dimen/dh_8"
                android:gravity="center"
                android:text="电话："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shike_name_tv"
                android:layout_marginTop="@dimen/dh_8"
                android:layout_toRightOf="@+id/phone_tv"
                android:gravity="center"
                android:text="123546"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/address_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_tv"
                android:layout_marginLeft="@dimen/dh_16"
                android:layout_marginTop="@dimen/dh_8"
                android:gravity="center"
                android:text="地址："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_7" />

            <TextView
                android:id="@+id/addressinfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_tv"
                android:layout_marginRight="@dimen/width_5_80"
                android:layout_marginTop="@dimen/dh_8"
                android:layout_toRightOf="@+id/address_left_tv"
                android:gravity="center_vertical|left"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_3_80"
                android:layout_below="@id/addressinfo_tv" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>