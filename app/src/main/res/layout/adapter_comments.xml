<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:paddingBottom="@dimen/dh_2"
    android:paddingTop="@dimen/dh_2">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginRight="@dimen/width_2_80"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dh_1"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dahuochifan.ui.views.CircleImageView
                android:id="@+id/chef_head"
                android:layout_width="@dimen/width_11_80"
                android:layout_height="@dimen/width_11_80"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/width_3_80" />

            <TextView
                android:id="@+id/chef_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chef_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/width_3_80"
                android:text="搭伙吃饭"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <RatingBar
                android:id="@+id/myratingbar"
                style="@style/roomRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chef_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dh_8"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5" />

            <TextView
                android:id="@+id/chef_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myratingbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dh_8"
                android:text="搭伙吃饭"
                android:textColor="@color/cooklistinfo_textcolor_new"
                android:textSize="@dimen/text_size_6" />

            <View

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/chef_comment"
                android:layout_marginTop="@dimen/dh_8" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
