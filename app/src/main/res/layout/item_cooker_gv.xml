<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_24_80"
    android:layout_height="@dimen/width_20_80"
    android:paddingTop="@dimen/width_1_80"
    android:paddingBottom="@dimen/width_1_80"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/gv_img"
        android:layout_height="@dimen/width_10_80"
        android:layout_width="@dimen/width_10_80"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_launcher"
        />
	<TextView 
	    android:id="@+id/gv_tv"
	    android:layout_below="@+id/gv_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/text_size_3"
	    android:textColor="@color/maincolor_new"
	    android:gravity="center"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="@dimen/width_0_80"
	    />
</RelativeLayout>
