<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <RelativeLayout
        android:id="@+id/nickname_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_3_80"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="账号"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_arrow" />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_3_80"
            android:layout_toLeftOf="@id/right_iv"
            android:gravity="center"
            android:text="xxx"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/peisong_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/nickname_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_3_80"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="配餐设置"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@id/peisong_rl"
        android:layout_marginTop="@dimen/width_3_80"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="关于产品"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv3"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_2_80"
            android:src="@drawable/red_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/about_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="意见反馈 "
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv4"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_2_80"
            android:src="@drawable/red_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/feedback_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="联系我们"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_ivx"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_2_80"
            android:src="@drawable/telphone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/memory_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/contact_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="清理缓存"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/width_3_80"
            android:layout_marginRight="@dimen/width_2_80"
            android:layout_marginTop="@dimen/width_3_80"
            android:background="@drawable/red_arrow"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width_2_80"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/memory_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="分享搭伙"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/width_3_80"
            android:layout_marginRight="@dimen/width_2_80"
            android:layout_marginTop="@dimen/width_3_80"
            android:background="@drawable/red_arrow"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apply_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@id/share_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="申请主厨"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv5"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/width_3_80"
            android:layout_marginRight="@dimen/width_2_80"
            android:layout_marginTop="@dimen/width_3_80"
            android:background="@drawable/red_arrow"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout_rl"
        style="@style/m_w"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@id/apply_rl"
        android:background="@drawable/underline_selector"
        android:padding="@dimen/width_1_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width_2_80"
            android:gravity="center"
            android:text="退出账号"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_7" />

        <ImageView
            android:id="@+id/right_iv6"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/width_3_80"
            android:layout_marginRight="@dimen/width_2_80"
            android:layout_marginTop="@dimen/width_3_80"
            android:background="@drawable/red_arrow"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>