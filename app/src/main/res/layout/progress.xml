<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_3_80"
        android:text="下载更新"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_9" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/title_tv"
        android:background="@color/gray" />

    <com.zhy.view.HorizontalProgressBarWithNumber
        android:id="@+id/progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:paddingBottom="@dimen/width_5_80"
        android:paddingLeft="@dimen/width_3_80"
        android:paddingRight="@dimen/width_3_80"
        android:paddingTop="@dimen/width_5_80"
        zhy:progress_text_color="#ffF53B03"
        zhy:progress_unreached_color="#ffF7C6B7" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/progress"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@drawable/cancel_btn_select2"
        android:gravity="center"
        android:paddingBottom="@dimen/width_2_80"
        android:paddingTop="@dimen/width_2_80"
        android:text="@string/cancel"
        android:textColor="@color/maincolor_new"
        android:textSize="@dimen/text_size_9" />

</RelativeLayout>