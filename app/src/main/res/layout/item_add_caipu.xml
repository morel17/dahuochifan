<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/width_2_80"
    android:paddingTop="@dimen/width_2_80"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/type_tvme"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_5_80"
        android:layout_weight="3"
        android:background="@drawable/card_main_left"
        android:gravity="center"
        android:text="sdfsd"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_7" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/height_5_80"
        android:layout_weight="7"
        android:paddingLeft="@dimen/width_3_80"
        android:paddingRight="@dimen/width_3_80" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="家常档"
            android:textColor="@color/cooklistinfo_textcolor"
            android:textSize="@dimen/text_size_5" />

        <View
            android:id="@+id/center_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/center_iv"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/center_iv"
            android:gravity="center"
            android:text="元/人"
            android:textColor="@color/cooklistinfo_textcolor"
            android:textSize="@dimen/text_size_5" />

        <RelativeLayout
            android:layout_width="@dimen/height_5_80"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_delete" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>