<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_addr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dh_2"
    android:layout_marginLeft="@dimen/width_1_80"
    android:layout_marginRight="@dimen/width_1_80"
    android:layout_marginTop="@dimen/dh_2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dh_1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/address_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dh_16">

        <ImageView
            android:id="@+id/red_iv"
            android:layout_width="@dimen/width_3_80"
            android:layout_height="@dimen/width_3_80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_arrow" />

        <TextView
            android:id="@+id/addr_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dh_32"
            android:paddingTop="@dimen/dh_32"
            android:text="添加地址"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_8"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/width_3_80">

            <TextView
                android:id="@+id/shike_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食　　客："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shike_tv"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shike_tv"
                android:layout_marginTop="@dimen/width_2_80"
                android:text="电　　话："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shike_tv"
                android:layout_marginTop="@dimen/width_2_80"
                android:layout_toRightOf="@+id/phone_tv"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/address_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_tv"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/width_2_80"
                android:text="地　　址："
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_6" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_tv"
                android:layout_marginTop="@dimen/width_2_80"
                android:layout_toRightOf="@+id/address_left_tv"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_6" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
