<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="@dimen/width_44_80"
        android:layout_height="match_parent"
        android:background="@color/light_white">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/pop_top_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/maincolor_new"
            android:gravity="center_horizontal"
            app:layout_heightPercent="16%w">

            <ImageView
                android:id="@+id/pop_top_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/confirm_white"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="40%h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_top_icon"
                android:text="私厨认证"
                android:textColor="@color/white"
                app:layout_marginLeftPercent="5%w"
                app:layout_textSizePercent="40%" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/pop_top_rl"
            app:layout_heightPercent="10%w"
            app:layout_marginTopPercent="12%w">

            <ImageView
                android:id="@+id/icon_one"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/gou_select2"
                app:layout_heightPercent="5.5%w"
                app:layout_marginLeftPercent="15.8%w"
                app:layout_widthPercent="5.5%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_toRightOf="@+id/icon_one"
                android:text="身份证实名认证"
                android:textColor="@color/cooklistinfo_textcolor_new"
                app:layout_textSizePercent="66.25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_one"
            android:layout_marginTop="@dimen/dh_8"

            app:layout_heightPercent="10%w">

            <ImageView
                android:id="@+id/icon_two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/gou_select2"
                app:layout_heightPercent="5.5%w"
                app:layout_marginLeftPercent="15.8%w"
                app:layout_widthPercent="5.5%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_toRightOf="@+id/icon_two"
                android:text="健康体检证明"
                android:textColor="@color/cooklistinfo_textcolor_new"
                app:layout_textSizePercent="66.25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_two"
            android:layout_marginTop="@dimen/dh_8"
            app:layout_heightPercent="10%w">

            <ImageView
                android:id="@+id/icon_three"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/gou_select2"
                app:layout_heightPercent="5.5%w"
                app:layout_marginLeftPercent="15.8%w"
                app:layout_widthPercent="5.5%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_toRightOf="@+id/icon_three"
                android:text="上门实地考察拍照"
                android:textColor="@color/cooklistinfo_textcolor_new"
                app:layout_textSizePercent="66.25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_four"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_three"
            android:layout_marginTop="@dimen/dh_8"
            app:layout_heightPercent="10%w">

            <ImageView
                android:id="@+id/icon_four"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/gou_select2"
                app:layout_heightPercent="5.5%w"
                app:layout_marginLeftPercent="15.8%w"
                app:layout_widthPercent="5.5%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_toRightOf="@+id/icon_four"
                android:text="主要食材指定供应"
                android:textColor="@color/cooklistinfo_textcolor_new"
                app:layout_textSizePercent="66.25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_five"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_four"
            android:layout_marginTop="@dimen/dh_8"
            app:layout_heightPercent="10%w">

            <ImageView
                android:id="@+id/icon_five"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:background="@drawable/gou_select2"
                app:layout_heightPercent="5.5%w"
                app:layout_marginLeftPercent="15.8%w"
                app:layout_widthPercent="5.5%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dh_8"
                android:layout_toRightOf="@+id/icon_five"
                android:text="高级试吃员试菜考核"
                android:textColor="@color/cooklistinfo_textcolor_new"
                app:layout_textSizePercent="66.25%" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_five"
            app:layout_heightPercent="27%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</android.support.v7.widget.CardView>