<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="15"
        android:padding="@dimen/width_5_80"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_9" />

    <RelativeLayout
        android:id="@+id/buttonll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width_10_80"
        android:layout_below="@+id/title_tv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/cener_iv"
            android:background="@drawable/cancel_btn_select"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_9" />

        <ImageView
            android:id="@+id/cener_iv"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/cener_iv"
            android:background="@drawable/confirm_btn_select"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_9" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/gray" />
    </RelativeLayout>

</RelativeLayout>