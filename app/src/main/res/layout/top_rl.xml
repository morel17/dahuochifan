<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toprl"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    android:background="@color/maincolor_new"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <requestFocus />

    <RelativeLayout
        android:id="@+id/back_rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/width_1_80"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon_back"
            android:paddingLeft="@dimen/width_3_80"
            android:paddingRight="@dimen/width_3_80"
            android:textColor="@color/maincolor_new"
            android:textSize="@dimen/text_size_8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="@dimen/height_5_6_80"
        android:layout_height="@dimen/height_5_6_80"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_search_new" />
    </RelativeLayout>

    <TextView
        android:id="@+id/add_address"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_5_6_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/width_3_80"
        android:textColor="@color/maincolor_new"
        android:gravity="center"
        android:textSize="@dimen/text_size_5" />

</RelativeLayout>