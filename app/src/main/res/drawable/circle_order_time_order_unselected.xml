<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/width_3_80"
                android:bottomRightRadius="@dimen/width_3_80"
                android:topLeftRadius="@dimen/width_3_80"
                android:topRightRadius="@dimen/width_3_80" />
        </shape>
    </item>
    <item
        android:bottom="0px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/gray_order"
                android:startColor="@color/gray_order"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="@dimen/width_3_80"
                android:bottomRightRadius="@dimen/width_3_80"
                android:topLeftRadius="@dimen/width_3_80"
                android:topRightRadius="@dimen/width_3_80" />
        </shape>
    </item>

</layer-list>
