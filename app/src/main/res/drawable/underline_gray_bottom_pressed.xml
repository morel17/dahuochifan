<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray_l" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="0px"
        android:right="0px"
        android:top="0px">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/gray_t"
                android:startColor="@color/gray_t"
                android:type="linear" />
        </shape>
    </item>

</layer-list>