<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/welcome_color_pressed" />

            <stroke android:width="2dp" android:color="@color/white" />

            <corners android:bottomLeftRadius="@dimen/width_1_80" android:bottomRightRadius="@dimen/width_1_80" android:topLeftRadius="@dimen/width_1_80" android:topRightRadius="@dimen/width_1_80" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/welcome_color" />

            <stroke android:width="2dp" android:color="@color/white" />

            <corners android:bottomLeftRadius="@dimen/width_1_80" android:bottomRightRadius="@dimen/width_1_80" android:topLeftRadius="@dimen/width_1_80" android:topRightRadius="@dimen/width_1_80" />
        </shape></item>

</selector>